<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- ImageView and TextView -->
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageViewEdit"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <EditText
            android:id="@+id/titleTextViewEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70px"
            android:textStyle="bold"
            android:text="Your Text" />

    </LinearLayout>

    <!-- ComboBox and DatePicker -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <DatePicker
            android:id="@+id/datePickerEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:calendarViewShown="false" />

        <Spinner
            android:id="@+id/spinnerEdit"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>



    <!-- Button -->
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/saveMealBtnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save meal"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_marginTop="80dp"
        android:id="@+id/deleteBtnEdit"
        android:background="@color/button_selected"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
